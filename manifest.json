{
  "name": "Steam Bundle Checker",
  "version": "0.0.2",
  "manifest_version": 2,
  "minimum_chrome_version": "29",
  "author": "Wes Rich",
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.humblebundle.com/*",
        "*://*.bundlestars.com/*",
        "*://*.indiegala.com/*"
      ],
      "css": [
        "css/app.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/app.js"
      ]
    },
    {
      "matches": [
        "*://*.humblebundle.com/*"
      ],
      "js": [
        "js/sites/humblebundle.js"
      ]
    },
    {
      "matches": [
        "*://*.bundlestars.com/*"
      ],
      "js": [
        "js/sites/bundlestars.js"
      ]
    },
    {
      "matches": [
        "*://*.indiegala.com/*"
      ],
      "js": [
        "js/sites/indiegala.js"
      ]
    }
  ],
  "permissions": [
   "tabs",
    "storage",
    "https://hb-steam-checker.herokuapp.com/"
  ]
}
