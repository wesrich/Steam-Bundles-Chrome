{
  "name": "Steam Bundle Checker",
  "version": "0.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "29",
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.humblebundle.com/*",
        "https://*.humblebundle.com/*",
        "http://*.bundlestars.com/*",
        "https://*.bundlestars.com/*"
      ],
      "js": [
        "js/jquery.min.js",
        "js/app.js"
      ]
    },
    {
      "matches": [
        "http://*.humblebundle.com/*",
        "https://*.humblebundle.com/*"
      ],
      "js": [
        "js/sites/humblebundle.js"
      ]
    },
    {
      "matches": [
        "http://*.bundlestars.com/*",
        "https://*.bundlestars.com/*"
      ],
      "js": [
        "js/sites/bundlestars.js"
      ]
    }
  ],
  "permissions": [
   "tabs",
    "storage",
    "https://localhost:5000/",
    "https://hb-steam-checker.herokuapp.com/",
    "https://*.humblebundle.com/"
  ]
}
